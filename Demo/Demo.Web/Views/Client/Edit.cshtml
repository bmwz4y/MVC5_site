
@using additiv.Imcs.Backend.Module.Web.Extensions
@using additiv.Imcs.Web.Widgets.Extensions
@using additiv.Imcs.Web.Widgets.FlexiGrid
@using Demo.Web.Models
@model ClientModel

<div class="row">
    <div class="col-sm-12">
        <h1 class="page-title">@String.Format("Client - {0}", Model.Id < 1 ? "Create" : "Edit")</h1>
    </div>
</div>

@using (Html.BeginForm(Model.Id.Equals(0) ? "Create" : "Edit", "Client", FormMethod.Post))
{
    <div class="Validation">
        @Html.CustomValidationSummary()
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.RegisterDate)
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group-inline">
                @Html.CustomLabelFor(x => x.FirstName)
                @Html.CustomTextBoxFor(x => x.FirstName)
            </div>
            <div class="form-group-inline">
                @Html.CustomLabelFor(x => x.LastName)
                @Html.CustomTextBoxFor(x => x.LastName)
            </div>
            <div class="form-group-inline">
                @Html.CustomLabelFor(x => x.BirthDate)
                @Html.CustomTextBoxFor(x => x.BirthDate, new { @class = "fm-text datepicker" })
            </div>
            <div class="form-group-inline">
                @Html.CustomLabelFor(x => x.Email)
                @Html.CustomTextBoxFor(x => x.Email)
            </div>
            <div class="form-group-inline">
                @Html.CustomLabelFor(x => x.TypeId)
                @Html.CustomDropDownListFor(x => x.TypeId, (IEnumerable<SelectListItem>)ViewBag.ClientTypes)
            </div>
            <br />
            <div class="buttonpane">
                @Html.ActionLink("Cancel", "Index", "Client", null, new { @class = "form-button-blue" })
                <button type="submit" class="form-button-blue" style="margin-left: 15px;" name="button" value="Save">Save</button>
            </div>
        </div>
    </div>
}